<section class="row mt-10 px-2 p-lg-0">
  <div class="card col-lg-6 mx-auto">
    <div class="card-body text-center">
      <h1 class="my-5">Sign Up</h1>

      <form action="/user/signup" method="post">
        <div class="form-floating mb-4">
          <input type="text" class="form-control" id="floating-name-input" name="name" placeholder="Your name">
          <label for="floating-name-input">Name</label>
        </div>
        <div class="form-floating mb-4">
          <input type="email" class="form-control" id="floating-email-input" name="email" placeholder="name@example.com"
            required>
          <label for="floating-email-input">Email address</label>
        </div>
        <div class="form-floating mb-4">
          <input type="password" class="form-control" id="floating-password-input" name="password"
            placeholder="Password" required>
          <label for="floatingPassword">Password</label>
        </div>
        <div class="form-floating mb-4">
          <input type="password" class="form-control" id="floating-password-confirm-input" name="passwordConfirm"
            placeholder="Password confirm" required>
          <label for="floating-password-confirm-input">Password Confirm</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</section>