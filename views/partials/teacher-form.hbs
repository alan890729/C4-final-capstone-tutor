<div class="mb-3">
  <label for="class-intro" class="form-label fs-4">Class Introduction</label>
  <textarea class="form-control" id="class-intro" name="classIntro" rows="5"
    required>{{user.Teacher.classIntro}}</textarea>
</div>
<div class="mb-3">
  <label for="teaching-style" class="form-label fs-4">Your Teaching Style</label>
  <textarea class="form-control" id="teaching-style" name="teachingStyle" rows="5"
    required>{{user.Teacher.teachingStyle}}</textarea>
</div>
<div class="mb-3">
  <label for="class-link" class="form-label fs-4">課程視訊連結</label>
  <input type="url" class="form-control" id="class-link" name="classLink" value="{{user.Teacher.classLink}}" required>
</div>
<div class="mb-3">
  <h4>開放預約</h4>
  {{#each daysPerWeek}}
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="checkbox" id="day-{{this.day}}" name="availableDays" value="{{this.day}}"
      {{#if this.isChecked}} checked {{/if}}>
    <label class="form-check-label" for="day-{{this.day}}">{{this.name}}</label>
  </div>
  {{/each}}
</div>
<div class="mb-3">
  <label class="form-check-label" for="lessonDurationMinuteId">單堂課程時間（分鐘）</label>
  <select class="form-select" id="lessonDurationMinuteId" name="lessonDurationMinuteId" required>
    {{#each lessonDurationMinutes}}
    <option value="{{this.id}}" {{#ifCondStrictEqual ../user.Teacher.lessonDurationMinuteId this.id}} selected
      {{/ifCondStrictEqual}}>{{this.durationMinute}} minutes</option>
    {{/each}}
  </select>
</div>