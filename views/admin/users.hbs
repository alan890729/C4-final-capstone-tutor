<section class="mt-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">編號</th>
        <th scope="col">名字</th>
        <th scope="col">是否為老師</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{#ifCondStrictEqual this.status 'teacher'}}老師{{/ifCondStrictEqual}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <nav>
    <ul class="pagination justify-content-center">
      <li class="page-item"><a class="page-link" href="?page={{paginators.prevPage}}">Previous</a>
      </li>
      {{#each paginators.pageBtnArr}}
      <li class="page-item {{#if this.isDisabled}} disabled {{/if}} {{#if this.isActive}} active {{/if}}">
        <a class="page-link" href="?page={{this.pageNum}}">{{this.pageNum}}</a>
      </li>
      {{/each}}
      <li class="page-item"><a class="page-link" href="?page={{paginators.nextPage}}">Next</a></li>
    </ul>
  </nav>
</section>